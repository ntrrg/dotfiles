# /etc/fstab

# FILE_SYSTEM                      MOUNT_POINT       TYPE         OPTIONS            DUMP   VERIFICATION

# Device
/dev/VG/Data                       /media/host       btrfs        defaults           0      2

# Swap
/dev/VG/Swap                       none              swap         defaults           0      0

# Folder
/media/host/var/lib/docker         /var/lib/docker   btrfs        bind               0      0

# Remote file system
ntrrg@home.nt.web.ve:/home/ntrrg   /home/ntrrg       fuse.sshfs   defaults,_netdev   0      0

